{
  "manifest_version": 3,
  "name": "42 Calendar Sync",
  "version": "0.1.0",
  "description": "Sync your 42 Intra registrations to Google Calendar automatically.",
  "permissions": [
    "storage",
    "identity",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://api.intra.42.fr/*",
    "https://projects.intra.42.fr/*",
    "https://intra.42.fr/*",
    "https://profile.intra.42.fr/*",
    "https://*.intra.42.fr/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "42 Calendar Sync"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://projects.intra.42.fr/*",
        "https://intra.42.fr/*",
        "https://profile.intra.42.fr/*",
        "https://*.intra.42.fr/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "minimum_chrome_version": "114"
}
